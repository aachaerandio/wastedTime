<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoy has perdido..."
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center"/>

	<TextView
        android:id="@+id/wastedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center"/>
    
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Describe tu experiencia.." >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Finalizar" 
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/socialfb" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/socialgplus" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/socialtwtr" />

    </LinearLayout>

</LinearLayout>
